<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  >
  <androidx.cardview.widget.CardView
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:elevation="@dimen/default_stroke"
    app:cardCornerRadius="@dimen/default_radius"
    app:cardElevation="@dimen/margin_m"
    app:cardPreventCornerOverlap="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/gradient_background"
      android:onClick="@{()->clickHandler.click(recipeDisplayable)}"
      android:padding="@dimen/normal_padding"
      >

      <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        />

      <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_s"
        app:layout_constraintBottom_toTopOf="@id/dateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView"
        >
        <com.google.android.material.textview.MaterialTextView
          android:id="@+id/materialTextView2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:ellipsize="end"
          android:text="@{recipeDisplayable.description}"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/materialTextView"
          tools:text="Description description"
          />
      </androidx.core.widget.NestedScrollView>

      <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:imageUrl="@{recipeDisplayable.imageUrl}"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Rounded.All.10Percent"
        tools:srcCompat="@drawable/cadillac"
        />
      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@{recipeDisplayable.title}"
        android:textAlignment="center"
        android:textAppearance="@style/Text.H4.Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        tools:text="The title"
        />
      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/Text.H6.Italic"
        app:date="@{recipeDisplayable.modificationDate}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2020-10-20"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
  <data>
    <variable
      name="recipeDisplayable"
      type="com.ambrozy.ui.displayables.RecipeDisplayable"
      />
    <variable
      name="clickHandler"
      type="com.ambrozy.ui.displayables.RecipeClickHandler"
      />
  </data>

</layout>
